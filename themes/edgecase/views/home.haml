//~ @page.to_html(self)
.category_listing
  .span-3.width_include_gutter
    - group_by_category.each do |k, v|
      .span-1
        %h1= k
        %ul
          - v.each do |p|
            %li
              - link = p.permalink
              %a(href=link)= p.metadata('title')
  .span-1.last.external
    %h1 EdgeCase Tutorials
    %a#git_immersion.link(href='http://gitimmersion.com' target='_blank') Git Immersion
    %a#rubykoans.link(href='http://rubykoans.com' target='_blank') RubyKoans
